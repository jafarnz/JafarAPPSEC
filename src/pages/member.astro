---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Member Dashboard - CCA Portal">
    <div class="min-h-screen p-4">
        <div class="animate-fade-in-up max-w-4xl mx-auto">
            <!-- Header -->
            <div
                class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8 mb-8"
            >
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div
                            class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg"
                        >
                            <svg
                                class="w-8 h-8 text-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold text-gray-800">
                                Welcome, Member!
                            </h1>
                            <p class="text-gray-600 font-medium">
                                You have successfully accessed the member area
                            </p>
                        </div>
                    </div>
                    <button
                        id="logout"
                        class="btn-danger px-6 py-3 rounded-xl text-white font-semibold shadow-lg hover:shadow-xl transition-all duration-200 flex items-center space-x-2"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                            ></path>
                        </svg>
                        <span>Logout</span>
                    </button>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div
                    class="card bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-white/20 p-6"
                >
                    <div class="flex items-center space-x-4">
                        <div
                            class="w-12 h-12 bg-gradient-to-br from-green-400 to-emerald-500 rounded-xl flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">
                                Access Status
                            </p>
                            <p class="text-2xl font-bold text-gray-800">
                                Active
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="card bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-white/20 p-6"
                >
                    <div class="flex items-center space-x-4">
                        <div
                            class="w-12 h-12 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-xl flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">
                                Member Level
                            </p>
                            <p class="text-2xl font-bold text-gray-800">
                                Standard
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="card bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-white/20 p-6"
                >
                    <div class="flex items-center space-x-4">
                        <div
                            class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-500 rounded-xl flex items-center justify-center"
                        >
                            <svg
                                class="w-6 h-6 text-white"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 7V3a4 4 0 118 0v4m-4 12v2m0 0l3-3m-3 3l-3-3m-3 5h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">
                                Security
                            </p>
                            <p class="text-2xl font-bold text-gray-800">
                                Protected
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Member Resources -->
                <div
                    class="card bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8"
                >
                    <h2
                        class="text-2xl font-bold text-gray-800 mb-6 flex items-center space-x-3"
                    >
                        <svg
                            class="w-6 h-6 text-blue-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                            ></path>
                        </svg>
                        <span>Member Resources</span>
                    </h2>
                    <div class="space-y-4">
                        <div
                            class="p-4 bg-blue-50 rounded-xl border border-blue-100 hover:bg-blue-100 transition-colors cursor-pointer"
                        >
                            <h3 class="font-semibold text-gray-800 mb-2">
                                Club Documents
                            </h3>
                            <p class="text-sm text-gray-600">
                                Access important club documentation and
                                resources
                            </p>
                        </div>
                        <div
                            class="p-4 bg-green-50 rounded-xl border border-green-100 hover:bg-green-100 transition-colors cursor-pointer"
                        >
                            <h3 class="font-semibold text-gray-800 mb-2">
                                Event Calendar
                            </h3>
                            <p class="text-sm text-gray-600">
                                View upcoming club events and activities
                            </p>
                        </div>
                        <div
                            class="p-4 bg-purple-50 rounded-xl border border-purple-100 hover:bg-purple-100 transition-colors cursor-pointer"
                        >
                            <h3 class="font-semibold text-gray-800 mb-2">
                                Member Directory
                            </h3>
                            <p class="text-sm text-gray-600">
                                Connect with other club members
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div
                    class="card bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8"
                >
                    <h2
                        class="text-2xl font-bold text-gray-800 mb-6 flex items-center space-x-3"
                    >
                        <svg
                            class="w-6 h-6 text-green-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        <span>Recent Activity</span>
                    </h2>
                    <div class="space-y-4">
                        <div
                            class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors"
                        >
                            <div class="w-2 h-2 bg-green-400 rounded-full mt-2">
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800">
                                    Successfully logged in
                                </p>
                                <p class="text-xs text-gray-500">Just now</p>
                            </div>
                        </div>
                        <div
                            class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors"
                        >
                            <div class="w-2 h-2 bg-blue-400 rounded-full mt-2">
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800">
                                    Profile updated
                                </p>
                                <p class="text-xs text-gray-500">2 hours ago</p>
                            </div>
                        </div>
                        <div
                            class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors"
                        >
                            <div
                                class="w-2 h-2 bg-purple-400 rounded-full mt-2"
                            >
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800">
                                    Event reminder set
                                </p>
                                <p class="text-xs text-gray-500">1 day ago</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div
                class="mt-8 card bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8"
            >
                <h2
                    class="text-2xl font-bold text-gray-800 mb-6 flex items-center space-x-3"
                >
                    <svg
                        class="w-6 h-6 text-indigo-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    <span>Quick Actions</span>
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <button
                        class="p-4 bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl"
                    >
                        <svg
                            class="w-6 h-6 mx-auto mb-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253z"
                            ></path>
                        </svg>
                        <span class="text-sm font-medium">Resources</span>
                    </button>
                    <button
                        class="p-4 bg-gradient-to-br from-green-500 to-green-600 text-white rounded-xl hover:from-green-600 hover:to-green-700 transition-all duration-200 shadow-lg hover:shadow-xl"
                    >
                        <svg
                            class="w-6 h-6 mx-auto mb-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 7V3a4 4 0 118 0v4m-4 12v2m0 0l3-3m-3 3l-3-3"
                            ></path>
                        </svg>
                        <span class="text-sm font-medium">Events</span>
                    </button>
                    <button
                        class="p-4 bg-gradient-to-br from-purple-500 to-purple-600 text-white rounded-xl hover:from-purple-600 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl"
                    >
                        <svg
                            class="w-6 h-6 mx-auto mb-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            ></path>
                        </svg>
                        <span class="text-sm font-medium">Members</span>
                    </button>
                    <button
                        class="p-4 bg-gradient-to-br from-orange-500 to-orange-600 text-white rounded-xl hover:from-orange-600 hover:to-orange-700 transition-all duration-200 shadow-lg hover:shadow-xl"
                    >
                        <svg
                            class="w-6 h-6 mx-auto mb-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="text-sm font-medium">Settings</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Background Decorations -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
        <div
            class="absolute -top-40 -right-32 w-80 h-80 bg-gradient-to-br from-blue-400/20 to-indigo-600/20 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute -bottom-40 -left-32 w-80 h-80 bg-gradient-to-br from-purple-400/20 to-pink-600/20 rounded-full blur-3xl"
        >
        </div>
        <div
            class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-br from-indigo-400/10 to-blue-600/10 rounded-full blur-3xl"
        >
        </div>
    </div>
</Layout>

<script>
    function logoutUser(event) {
        event.preventDefault();
        localStorage.removeItem("token");
        window.showToast("Logged out successfully", "success");
        setTimeout(() => {
            window.location.href = "/login";
        }, 1000);
    }

    function checkAuth() {
        const token = localStorage.getItem("token");
        if (token === null) {
            window.location.href = "/login";
        } else {
            const xhr = new XMLHttpRequest();
            xhr.addEventListener("readystatechange", function () {
                if (this.readyState === 4) {
                    if (this.status === 200) {
                        console.log("Member access granted");
                        window.showToast(
                            "Welcome to your member dashboard!",
                            "success",
                        );
                    } else {
                        localStorage.removeItem("token");
                        window.showToast(
                            "Session expired. Please login again.",
                            "error",
                        );
                        setTimeout(() => {
                            window.location.href = "/login";
                        }, 2000);
                    }
                }
            });
            xhr.open("GET", "/api/member-protected");
            xhr.setRequestHeader("Authorization", "Bearer " + token);
            xhr.send();
        }
    }

    // Check authentication when page loads
    checkAuth();

    const logout = document.getElementById("logout");
    logout.addEventListener("click", logoutUser);
</script>
