<script>
    // function to show the protected content after auth check
    function showProtected() {
        const loading = document.getElementById("loading");
        const root = document.getElementById("protectedRoot");
        if (loading) loading.classList.add("hidden");
        if (root) root.classList.remove("hidden");
    }

    //

    function logoutUser(event) {
        event.preventDefault(); 
        localStorage.removeItem("token");
        (window as any).showToast("Logged out successfully", "success");
        setTimeout(() => {
            window.location.href = "/login";
        }, 1000);
    }

    function decodeRoleFromToken(token) {
        try {
            const payload = JSON.parse(atob(token.split(".")[1] || ""));
            return payload?.role;
        } catch (_) {
            return null;
        }
    }

    async function checkAuth() {
        const token = localStorage.getItem("token");
        const expectedRole = "treasurer";
        if (!token) {
            window.location.href = "/login";
            return;
        }

        const role = decodeRoleFromToken(token);
        if (role && role !== expectedRole) {
            // Redirect to login when accessing a different role page
            window.location.replace("/login");
            return;
        }

        try {
            const resp = await fetch("/api/treasurer-protected", {
                headers: { Authorization: "Bearer " + token },
            });
            if (resp.ok) {
                showProtected();
                (window as any).showToast("Welcome to your treasurer dashboard!", "success");
            } else {
                localStorage.removeItem("token");
                (window as any).showToast("Session expired. Please login again.", "error");
                setTimeout(() => {
                    window.location.href = "/login";
                }, 2000);
            }
        } catch (e) {
            localStorage.removeItem("token");
            (window as any).showToast("Network error. Please login again.", "error");
            setTimeout(() => (window.location.href = "/login"), 1500);
        }
    }

    checkAuth();

    const logout = document.getElementById("logout");
    if (logout) logout.addEventListener("click", logoutUser);
</script>
